    <!-- Blog Details Hero Begin -->
    <section class="blog-details-hero set-bg" data-setbg="/img/blog/details/details-hero.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="blog__details__hero__text">
                        {{#with details.dataValues}}
                        <h2>{{title}}</h2>
                        <ul>
                            {{#with User.dataValues}}
                            <li>By {{firstName}} {{lastName}}</li>
                            {{/with}}
                            <li>{{showDateTime createdAt}}</li>
                            <li>{{Comments.length}} Comments</li>
                        </ul>
                        {{/with}}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Blog Details Hero End -->

    <!-- Blog Details Section Begin -->
    <section class="blog-details spad">
        <div class="container">
            <div class="row">
                {{>sidebar categories=categories tags=tags}}
                {{#with details.dataValues}}
                <div class="col-lg-8 col-md-7 order-md-1 order-1">
                    <div class="blog__details__text">
                        <img src="{{imagePath}}" alt="">
                        <p>{{{description}}}</p>
                        <h3>{{title}}</h3>
                        <p>{{summary}}</p>
                    </div>
                    <div class="blog__details__content">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="blog__details__author">
                                    {{#with User.dataValues}}
                                    <div class="blog__details__author__pic">
                                        <img src="{{imagePath}}" alt="">
                                    </div>
                                    <div class="blog__details__author__text">
                                        <h6>{{firstName}} {{lastName}}</h6>
                                        {{#if isAdmin}}<span>Admin</span>{{/if}}
                                    </div>
                                    {{/with}} 
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="blog__details__widget">
                                    <ul>
                                        <li><span>Categories:</span> {{Category.dataValues.name}}.</li>
                                        <li><span>Tags:</span> {{#each Tags}} {{dataValues.name}}{{#unless @last}},{{/unless}}{{/each}}.</li>
                                    </ul>
                                    <div class="blog__details__social">
                                        <a href="#"><i class="fa fa-facebook"></i></a>
                                        <a href="#"><i class="fa fa-twitter"></i></a>
                                        <a href="#"><i class="fa fa-google-plus"></i></a>
                                        <a href="#"><i class="fa fa-linkedin"></i></a>
                                        <a href="#"><i class="fa fa-envelope"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/with}}
            </div>
        </div>
    </section>

