<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Blogs</h2>
                        <div class="breadcrumb__option">
                            <a href="/">Home</a>
                            <span>Blog</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>

<section class="blog spad">
        <div class="container">
            <div class="row">
                {{>sidebar categories=categories tags=tags}}
                <div class="col-lg-8 col-md-7">
                    <div class="row">
                        {{#each blogs}}
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="blog__item">
                                <div class="blog__item__pic">
                                    <img src="{{dataValues.imagePath}}" alt="{{dataValues.title}}">
                                </div>
                                <div class="blog__item__text">
                                    <ul>
                                        <li><i class="fa fa-calendar-o"></i> {{showDateTime dataValues.createdAt}}</li>
                                        <li><i class="fa fa-comment-o"></i> {{Comments.length}}</li>
                                    </ul>
                                    <h5><a href="/blogs/{{dataValues.id}}">{{dataValues.title}}</a></h5>
                                    <p>{{dataValues.summary}}</p>
                                    <a href="/blogs/{{dataValues.id}}" class="blog__btn">READ MORE <span
                                            class="arrow_right"></span></a>
                                </div>
                            </div>
                        </div>
                        {{/each}}

                        <div class="col-lg-12">
                            <div class="product__pagination blog__pagination">
                                <a href="{{page_arrow.left.link}}" 
                                    {{#if page_arrow.left.active}}class="disabled"{{/if}}>
                                    <i class="fa fa-long-arrow-left"></i>
                                    </a>
                                {{#each pages}}<a href="{{link}}">{{page}}</a>{{/each}}
                                <a href="{{page_arrow.right.link}}" 
                                    {{#if page_arrow.right.active}}class="disabled"{{/if}}>
                                    <i class="fa fa-long-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>